<?import javafx.scene.input.*?>
<?import javafx.scene.layout.*?>

<fx:root type="javafx.scene.layout.VBox" xmlns:fx="http://javafx.com/fxml" >
  <children>
    <TextField fx:id="title" minHeight="30.0" prefHeight="50.0" prefWidth="200.0" promptText="Title" />
    <HBox minHeight="-1.0" prefHeight="20.0" prefWidth="200.0" >
      <children>
        <ChoiceBox>
          <items>
            <FXCollections fx:factory="observableArrayList">
              <String fx:value="Item 1" />
              <String fx:value="Item 2" />
              <String fx:value="Item 3" />
            </FXCollections>
          </items>
        </ChoiceBox>
      </children>
    </HBox>
    <TextArea fx:id="content" prefWidth="200.0" promptText="Note" wrapText="true" />
  </children>
</fx:root>
